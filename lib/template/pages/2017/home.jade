.content
  .page.home
    .container
      .row
        .col-xs-8.col-sm-10
          h1
            ='Zpatra 2017'
            br
            small Prague Improv Festival
          .next-date 20. - 21. 10. 2017
        .col-xs-4.col-sm-2
          img.img-responsive(src=$ren->link_resource('pixmap', 'logo/zpatra.png'))

      #homeCarousel.carousel.slide(data-ride="carousel")
        .carousel-inner(role="listbox")
          #carousel-improv-1.item.active
          #carousel-improv-2.item
          #carousel-improv-3.item
          #carousel-improv-4.item
          #carousel-improv-5.item
          #carousel-improv-6.item
          #carousel-lee.item
          #carousel-masks.item
          #carousel-tomas-jirecek.item
          #carousel-vanda-zako.item
          #carousel-orgs.item
        ol.carousel-indicators
          li.active(data-target="#carousel-improv-1", data-slide-to="0")
          li(data-target="#carousel-improv-2", data-slide-to="1")
          li(data-target="#carousel-improv-3", data-slide-to="2")
          li(data-target="#carousel-improv-4", data-slide-to="3")
          li(data-target="#carousel-improv-5", data-slide-to="4")
          li(data-target="#carousel-improv-6", data-slide-to="5")
          li(data-target="#carousel-lee", data-slide-to="6")
          li(data-target="#carousel-masks", data-slide-to="7")
          li(data-target="#carousel-tomas-jirecek", data-slide-to="8")
          li(data-target="#carousel-vanda-zako", data-slide-to="9")
          li(data-target="#carousel-orgs", data-slide-to="10")

        a.left.carousel-control(href="#homeCarousel", role="button", data-slide="prev")
          span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
          span.sr-only Previous
        a.right.carousel-control(href="#homeCarousel", role="button", data-slide="next")
          span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
          span.sr-only Next


